{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "semi": "off", // Ignore missing semicolon errors
    "quotes": "off", // Ignore double/single quotes errors,
    "no-unused-vars": "warn",
    "react/prop-types": "warn",
    "react/no-deprecated": "warn",
    "no-useless-catch": "warn"
  }
}
